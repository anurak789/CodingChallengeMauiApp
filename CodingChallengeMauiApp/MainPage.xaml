<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:icons="clr-namespace:CodingChallengeMauiApp.Images"
             x:Class="CodingChallengeMauiApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Old Phone Pad"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="24"
                HorizontalOptions="Center" 
                VerticalOptions="CenterAndExpand"/>

            <Button Text="Enter to the system"
                    BackgroundColor="Crimson"
                    Clicked="OnEnterClicked"/>
            <BoxView Color="AliceBlue" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            </BoxView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
